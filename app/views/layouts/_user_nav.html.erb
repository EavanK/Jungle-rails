<% if current_user %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <span class="text-info"><%= fa_icon 'user', text: current_user.first_name %></span>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Logout", session_path(current_user), method: :delete %></li>
    </ul>
  </li>

<% else %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <span class="text-info"><%= fa_icon 'user' %></span>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'Login', [:new, :session] %></li>
      <li><%= link_to 'Signup', [:new, :user] %></li>
    </ul>
  </li>
<% end %>