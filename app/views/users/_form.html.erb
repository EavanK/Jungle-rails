<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_for @user, url: :users do |f| %>

    <div class="form-group">
      <%= f.label "First Name" %><br>
      <%= f.text_field :first_name, placeholder: "First Name" %>
    </div>

    <div class="form-group">
      <%= f.label "Last Name" %><br>
      <%= f.text_field :last_name, placeholder: "Last Name" %>
    </div>

    <div class="form-group">
      <%= f.label "Email" %><br>
      <%= f.text_field :email, placeholder: "example@exampel.com" %>
    </div>

    <div class="form-group">
      <%= f.label "Password" %><br>
      <small>(minimum 6 charaters)</small><br>
      <%= f.password_field :password, placeholder: "password" %>
    </div>

    <div class="form-group">
      <%= f.label "Password Confirmation" %><br>
      <%= f.password_field :password_confirmation, placeholder: "password Confirmation" %>
    </div>

    <% if flash[:warning] %>

      <div class="alert alert-danger" role="alert">
        <% flash[:warning].each do |attr, m| %>
        <li><%= "#{attr} " + m.join(", #{attr} ") %></li>
        <% end %>
      </div>

    <% end %>

    <%= f.submit "Signup", class: 'btn btn-primary' %>      
    <% end %>
  </div>
</div>